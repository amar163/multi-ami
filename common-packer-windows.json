{
    "variables": {
        "region": "us-east-2",
        "baseimage": "",
        "targetAmiName": "",
        "installScript": ""
    },
    "builders": [
        {
            "ami_name": "Windows-{{user `targetAmiName`}}-{{timestamp}}",
            "instance_type": "t2.micro",
            "region": "{{user `region`}}",
            "source_ami": "{{user `baseimage`}}",
            "winrm_username": "Administrator",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "scripts": [
                "{{user `installScript`}}"
            ],
            "execute_command": "powershell -executionpolicy bypass '& { if (Test-Path variable:global:ProgressPreference){$ProgressPreference='SilentlyContinue'};. {{.Vars}}; &'{{.Path}}'; exit $LastExitCode }'",
            "pause_before": "10s"
        }
    ]
}
